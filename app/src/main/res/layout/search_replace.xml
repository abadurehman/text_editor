<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="@dimen/md_dialog_frame_margin"
        android:paddingLeft="@dimen/md_listitem_margin_left"
        android:paddingRight="@dimen/md_dialog_frame_margin"
        android:paddingStart="@dimen/md_listitem_margin_left">

        <com.jecelyin.common.widget.DrawClickableEditText
            android:id="@+id/find_edit_text"
            style="@style/MaterialEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_arrow_drop_down_black"
            android:hint="@string/find_label"
            app:met_floatingLabel="highlight" />

        <CheckBox
            android:id="@+id/replace_check_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/replace" />

        <com.jecelyin.common.widget.DrawClickableEditText
            android:id="@+id/replace_edit_text"
            style="@style/MaterialEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_arrow_drop_down_black"
            android:hint="@string/replace_label"
            app:met_floatingLabel="highlight" />

        <CheckBox
            android:id="@+id/case_sensitive_check_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/case_sensitive" />

        <CheckBox
            android:id="@+id/whole_words_only_check_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/whole_words_only" />

        <CheckBox
            android:id="@+id/regex_check_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/regex" />

        <CheckBox
            android:id="@+id/in_path_check_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/in_path" />

        <FrameLayout
            android:id="@+id/pathLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/path_edit_text"
                style="@style/MaterialEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/directory"
                android:paddingRight="42dp" />

            <ImageView
                android:id="@+id/browserBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="end|center_vertical"
                android:scaleType="center"
                android:src="@drawable/ic_more_horiz_grey600_24dp" />
        </FrameLayout>

        <CheckBox
            android:id="@+id/recursively_check_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/recursively" />
    </LinearLayout>
</ScrollView>
