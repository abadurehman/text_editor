<resources>


    <style name="Light.Toolbar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">?colorPrimary</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <style name="Light.Popup.Toolbar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Toolbar.Item" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <color name="editor_action_mode_light_background">#5c6bc0</color>

    <style name="ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="background">@color/editor_action_mode_light_background</item>
        <item name="height">?attr/actionBarSize</item>
    </style>

    <style name="ActionMode.Subtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>


    <style name="MaterialEditText">
        <item name="met_primaryColor">?attr/colorAccent</item>
        <item name="met_textColor">?android:attr/textColorPrimary</item>
        <item name="met_textColorHint">?android:attr/textColorSecondary</item>
        <item name="met_underlineColor">?attr/dividerColor</item>
        <item name="android:textColorHint">?android:attr/textColorSecondary</item>
    </style>

</resources>
