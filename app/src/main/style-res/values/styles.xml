<resources>


    <style name="Light.Toolbar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">?colorPrimary</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <style name="Light.Popup.Toolbar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Light.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">?colorPrimaryDark</item>
        <item name="height">?attr/actionBarSize</item>
        <item name="titleTextStyle">@style/Light.ActionMode.Title</item>
        <item name="subtitleTextStyle">@style/Light.ActionMode.Subtitle</item>
    </style>

    <style name="Light.ActionMode.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="Light.ActionMode.Subtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>



    <style name="MaterialEditText">
        <item name="met_primaryColor">?attr/colorAccent</item>
        <item name="met_textColor">?android:attr/textColorPrimary</item>
        <item name="met_textColorHint">?android:attr/textColorSecondary</item>
        <item name="met_underlineColor">?attr/dividerColor</item>
        <item name="android:textColorHint">?android:attr/textColorSecondary</item>
    </style>

</resources>
